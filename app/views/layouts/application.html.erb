<!DOCTYPE html>
<html>
  <head>
    <title>JobTrackerPortal</title>
    <%= csrf_meta_tags %>
    <%= Gon::Base.render_data %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>

  <body>
    <ul id="dropdown1" class="dropdown-content">
      <% if current_admin %>
        <li><%= link_to "Admin Log Out", "/admins/sign_out" %></li>
      <% elsif current_user %>
        <li><%= link_to "User Log Out", "/users/sign_out" %></li>
      <% else %>
        <li><%= link_to "Admin Sign In", "/admins/sign_in" %></li>
        <li><%= link_to "User Sign In", "/users/sign_in" %></li>
      <% end %>
    </ul>
    <nav class="primary-color-dark" role="navigation">
      <div class="nav-wrapper container" data-turbolinks="false">
        <a href="/" class="brand-logo">Job Tracker</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <% if current_user %>
            <li><a href="/users/<%= current_user.id %>/leads/#"><i class="material-icons left">assignment</i>New Application</a></li>
            <li><a href="/users/<%= current_user.id %>/leads/new"><i class="material-icons left">assignment_ind</i>New Lead</a></li>
            <li><a href="/users/<%= current_user.id %>/leads">My Dashboard</a></li>
          <% end %>
          <!-- Dropdown Trigger -->
          <li><a class="dropdown-button" href="#!" data-activates="dropdown1">My Account<i class="material-icons right">arrow_drop_down</i></a></li>
        </ul>
      </div>
    </nav>

    <section id="flash">
      <% flash.each do |type, message| %>
        <% if type == "success" %>
          <div class="alert alert-success alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <i class="icon-check"></i>
            <p><%= message.html_safe %></p>
          </div>
        <% elsif type == "toast" %>
          <script>
            $(function() {
              Materialize.toast('<%= message %>', 3000);
            });
          </script>
        <% else %>
          <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <i class="icon-notice"></i>
            <%= message.html_safe %>
          </div>
        <% end %>
      <% end %>
    </section>
    <main>
      <div class="container">
        <%= yield %>
      </div>
    </main>
    <footer class="page-footer primary-color">
      <div class="footer-copyright">
        <div class="container">
          Made by <a class="white-text" href="http://materializecss.com">Materialize</a>
        </div>
      </div>
    </footer>
  </body>
</html>
